// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "watch: extension",
      "type": "npm",
      "script": "watch",
      "path": "packages/extension",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "build"
    },
    {
      "label": "watch: webview-ui",
      "type": "npm",
      "script": "watch",
      "path": "packages/webview-ui",
      "isBackground": true,
      // custom problem matcher so vscode can properly use vite to build the extension before debugging
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "(^.*):(\\d+):(\\d+):\\s+(WARNING|ERROR):\\s+(.*$)",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^build started...",
          "endsPattern": "^built in \\d+ms.$|^\\d+ \\| "
        }
      },
      "group": "build"
    },
    {
      "label": "watch",
      "dependsOn": ["watch: webview-ui", "watch: extension"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
